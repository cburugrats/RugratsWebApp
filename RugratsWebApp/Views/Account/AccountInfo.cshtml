@model IEnumerable<RugratsWebApp.Models.MoneyTransferModel>

@{
    ViewBag.Title = "AccountInfo";
}


<h2>AccountInfo</h2>

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <!-- /.box-header -->

    <div class="box-body">
        <div class="col-sm-12">
            <form action="/Account/Delete" method="post">
                <!-- text input -->

                <div class="form-group">
                    <label>Account No</label>
                    <input type="text" value="@ViewBag.AccountNo" class="form-control" disabled="disabled">
                    <input type="hidden" name="AccountNo" value="@ViewBag.AccountNo">
                </div>
                <div class="form-group">
                    <label>Balance</label>
                    <input type="text" value="@ViewBag.balance" class="form-control" disabled="disabled">
                </div>
                <div class="form-group">
                    <label>Blockage Amount</label>
                    <input type="text" value="@ViewBag.blockageAmount" class="form-control" disabled="disabled">
                </div>
                <div class="form-group">
                    <label>Net Balance</label>
                    <input type="text" value="@ViewBag.netBalance" class="form-control" disabled="disabled">
                </div>
                <div class="form-group">
                    <label>Opening Date</label>
                    <input type="text" value="@ViewBag.openingDate" class="form-control" disabled="disabled">
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-warning pull-right">Close This Account</button>
                </div>
            </form>
        </div>

    </div>
    <!-- /.box-body -->
</div>

<div class="col-xs-12">

    <h2>Transfer List</h2>

    <div class="box">
        <div class="box-header">

            <div class="box-tools">
                <div class="input-group input-group-sm hidden-xs" style="width: 150px;">

                </div>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <th>
                            Realization Time
                        </th>
                        <th>
                            Receiver Account No
                        </th>
                        <th>
                            Sender Account No
                        </th>
                        <th>
                            Transfer Type
                        </th>
                        <th>
                            Amount
                        </th>

                        <th>
                            statement
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.realizationTime.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.receiverAccountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.senderAccountNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.transferType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.statement)
                                </td>

                                <td>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</div>
