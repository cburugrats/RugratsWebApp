@model IEnumerable<RugratsWebApp.Models.AccountModel>

@{
    ViewBag.Title = "Subscribe To New Hgs";
}
    <h2>Subscribe To New Hgs</h2>

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <!-- /.box-header -->

    <div class="box-body">
        <div class="col-sm-12">

            <form action="/hgs/CreateAsync" method="post">
                <!-- text input -->
                <div class="form-group">
                    <label for="">Your Own Accounts</label>
                    <select class="form-control" id="ReceiverAccountNo" name="ReceiverAccountNo">
                        @if (Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <option value="@item.accountNo">@item.accountNo</option>
                            }
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Amount</label>
                    <input type="number" name="Amount" class="form-control" step="0.01" min="0.01" max="@ViewBag.netBlance" placeholder="Enter ...">
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Continue</button>
                </div>
            </form>
        </div>

    </div>
    <!-- /.box-body -->
</div>