
@{
    ViewBag.Title = "ToAnotherAccounts";
}

    <h2>Transfer To Another Accounts</h2>

<div class="box box-warning">
    <div class="box-header with-border">
        <h3 class="box-title"></h3>
    </div>
    <!-- /.box-header -->

    <div class="box-body">
        <div class="col-sm-12">
            <form action="/MoneyTransfers/ToOtherAccountsAsync" method="post">
                <!-- text input -->

                <div class="form-group">
                    <label>Account No</label>
                    <input type="text" value="@ViewBag.AccountNo" class="form-control" disabled="disabled">
                    <input type="hidden" name="SenderAccountNo" value="@ViewBag.AccountNo">
                </div>
                <div class="form-group">
                    <label>Net Balance</label>
                    <input type="text" class="form-control" value="@ViewBag.netBlance" disabled="">
                </div>
                <div class="form-group">
                    <label>Receiver Account No</label>
                    <input type="number" name="ReceiverAccountNo" class="form-control" placeholder="Enter ...">
                </div>
                <div class="form-group">
                    <label>Amount</label>
                    <input type="number" name="Amount" class="form-control" step="0.01" min="0" max="@ViewBag.netBlance" placeholder="Enter ...">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea class="form-control" name="description" rows="3" placeholder="Enter ..."></textarea>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-info pull-right">Continue</button>
                </div>
            </form>
        </div>

    </div>
    <!-- /.box-body -->
</div>